<p>
  	<h2><%= @note.heading %></h2>
</p>
<p>
  	<%= @note.message %>
</p>
<p>
  	<%= link_to @note.author.name, user_path(@note.author) %>
</p>

<h3>Kommentare</h3>
	
	<% for comment in @note.comments %>
		<p>
			<%= comment.body %>
		</p>
	<% end %>

<p>
  	<!--%= button_to "Neuen Kommentar Anlegen", new_comment_path, :class => "btn btn-default" %-->
  	<%= form_for [@note, Comment.new] do |f| %>
		<div class="form-group">
			<p>
				<%= f.text_field :heading, class: "form-control", :placeholder => t('placeholder_note_heading')%>
			</p>
			<p>
				<%= f.text_area :body, class: "form-control", :placeholder => t('placeholder_note_heading')%>
			</p>
	    	<%= f.submit t('submit') %>
	  	</div>
  	<% end %>
</p>

